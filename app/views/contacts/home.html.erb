    <!-- Header -->
    <header>
        <div class="container">
            <div class="intro-text">
                <%= image_tag("decodev-slider-text.png", height: '150', class:"heading") %>
                <%= image_tag("subtitle.png", class:"subtitle") %>
            </div>
        </div>
    </header>

    <!-- About Section -->
    <section id="about" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">About</h2>
                    <h3 class="section-subheading text-muted">We are a small team of designers, developers and marketers based in Miami, Fl. <br>We specialize in producing high-end websites and web applications for quality conscious clients in the US and throughout Latin America. Our client management practices set us apart from other web development firms. We put our clients interests first and not our own. We believe in full transparency with our clients before a project has even begun. We work with our clients every step of the way using agile methodologies to provide noteworthy products.</h3>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Services</h2>
                    <h3 class="section-subheading text-muted">We create solutions for the web and mobile.</h3>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-laptop fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">Web Applications</h4>
                    <p class="text-muted">We build using the latest in JavaScript technologies integrated with the Ruby on Rails Framework.</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-tablet fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">Mobile Applications</h4>
                    <p class="text-muted">From iOS to Android, we create solutions that adapt to the ever growing demand for a mobile presence.</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-rocket fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">Marketing</h4>
                    <p class="text-muted">Our work isn't done after development. We continue working with you to make sure you applications reach your target audience.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Contact Us</h2>
                    <h3 class="section-subheading text-muted">We are here to answer any questions you have.</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form name="sentMessage" id="contactForm" novalidate>
                        <div class="row">
                            <%= form_for @contact do |f| %>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= f.text_field :name, class: 'form-control', id: 'name', :placeholder => "Name" %>
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <%= f.text_field :email, class: 'form-control', id: 'email', :placeholder => "Email" %>
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <%= f.text_field :phone, class: 'form-control', id: 'phone', :placeholder => "Phone" %>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= f.text_area :description, class: 'form-control', id: 'message', :placeholder => "Message" %>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button type="submit" class="btn btn-xl">Send Message</button>
                            </div>
                        </div>
                    </form>
                    <% end %>
                </div>
            </div>
        </div>
    </section>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <span class="copyright">Copyright &copy; DecoDev 2015</span>
                </div>
